# 로컬 환경 변수 설정
# 이 파일을 수정하면 .local.env 파일도 자동으로 변경됩니다

# API Keys (git에 커밋하지 마세요!)
export API_KEY="your-api-key-here"
export GITHUB_TOKEN="your-github-token"

# 로컬 경로 설정
export LOCAL_PROJECTS_PATH="$HOME/projects"
export LOCAL_TOOLS_PATH="$HOME/tools"

# 데이터베이스 설정
export DB_HOST="localhost"
export DB_PORT="5432"
export DB_NAME="local_db"

# 개발 환경 설정
export NODE_ENV="development"
export PYTHONPATH="$HOME/.local/lib/python3.9/site-packages"

# 커스텀 alias
export CUSTOM_EDITOR="code"
